<!--CSS-->

*{
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

body{
    display: flex;
    flex-wrap: wrap;
    margin: 3px ;
    flex: 1 1 100vw;
}

header, nav, main, aside, footer{
    display: flex;
    margin: 3px;
    background-color: #a1a1a1;
}

header{
    flex: 1 1 100vw;
    height: 100px;
}

nav{
    flex: 20 1 200px;
}

main{
    flex: 1 1 500px;
    height: calc(100vh - 224px);
}

aside{
    flex: 1 1 200px;
}

footer{
    flex: 1 1 100vw;
    height: 100px;
}

@media only screen and (max-width:923px){
    main{
    height: calc(100vh - 300px)
    }

    aside{
    flex: 1 1 100vw ;
    height: 100px ;
    }
}

@media only screen and (max-width:923px){
    nav{
    height: 100px;
    }

    main{
        height: calc(100vh - 436px)
        }
}
